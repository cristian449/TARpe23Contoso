@model ContosoUniversity.Models.Department
@{
    ViewData["Title"] = "Make and Delete";
}

<h2>Create a new department based on data from existing departments</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BaseOn">
            <input type="hidden" asp-for="RowVersion" value="@Html.Raw("0")" />
            <input type="hidden" asp-for="DepartmentID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"></input>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Budget" class="control-label"></label>
                <input asp-for="Budget" class="form-control"></input>
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StarDate" class="control-label"></label>
                <input asp-for="StarDate" class="form-control"></input>
                <span asp-validation-for="StarDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DarkLord" class="control-label"></label>
                <input asp-for="DarkLord" class="form-control"></input>
                <span asp-validation-for="DarkLord" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cigarettes" class="control-label"></label>
                <input asp-for="Cigarettes" class="form-control"></input>
                <span asp-validation-for="Cigarettes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="InstructorID" class="control-label"></label>
                <select asp-for="InstructorID" class="form-control" asp-items="ViewBag.InstructorID">
                    <option value="">-- Select Administrator --</option>
                </select>
                <span asp-validation-for="InstructorID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" name="action" value="Make" class="btn btn-primary">Make</button>
                <button type="submit" name="action" value="MakeAndDeleteOld" class="btn btn-danger">Make & Delete Old</button>
            </div>
        </form>
        <a asp-action="Index" class="btn btn-outline-primary">Back to Index</a>
    </div>
</div>
