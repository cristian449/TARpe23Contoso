@model IEnumerable<ContosoUniversity.Models.Course>
@{
    ViewData["Title"] = "Kursused";
}
<h1>Courses</h1>
<p>
    <a asp-action="Create">Make a new Course</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Title)</th>
            <th> @Html.DisplayNameFor(model => model.Credits)</th>
            <th>Available Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => course.Title)</td>
                <td> @Html.DisplayFor(modelItem => course.Credits)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.CourseID" class="btn btn-dark">Details</a>
                    <a asp-action="Edit" asp-route-id="@course.CourseID" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@course.CourseID" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>