@model ContosoUniversity.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Credits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Credits)
        </dd>
    </dl>
</div>

<div>
    @if (ViewContext.RouteData.Values["action"].ToString() == "Details")
    {
        <a asp-action="Edit" asp-route-id="@Model.CourseID" class="btn btn-primary">Edit</a>
        <a asp-action="Clone" asp-route-id="@Model.CourseID" class="btn btn-info">Clone</a>
    }
    else if (ViewContext.RouteData.Values["action"].ToString() == "Delete")
    {
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.CourseID" method="post">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>